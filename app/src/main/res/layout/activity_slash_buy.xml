<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dash_board"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/window_bg"
    android:orientation="vertical">

    <include
        android:id="@id/networkWarnPanel"
        layout="@layout/layout_network_disable"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/input_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_account_login_country_choose_container"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/input_item_top_single_height"
                android:layout_marginLeft="@dimen/list_item_left_right_margin"
                android:layout_marginRight="@dimen/list_item_left_right_margin"
                android:background="@drawable/input_bg_top_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/flexible_space"
                android:paddingRight="@dimen/flexible_space"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_input_account_phone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/input_item_middle_list_single_height"
                android:layout_marginLeft="@dimen/list_item_left_right_margin"
                android:layout_marginRight="@dimen/list_item_left_right_margin"
                android:background="@drawable/input_bg_middle_normal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/flexible_space"
                android:paddingRight="@dimen/flexible_space">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="260dip">


                    <VideoView
                        android:id="@+id/videoView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />
                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/account_password_container"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/input_item_top_bottom_height"
                android:layout_marginLeft="@dimen/list_item_left_right_margin"
                android:layout_marginRight="@dimen/list_item_left_right_margin"
                android:background="@drawable/input_bg_bottom_normal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/flexible_space"
                android:paddingRight="6.0dip"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/p_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6.0dip"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/text_tag_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6.0dip"
                        android:ellipsize="end"
                        android:maxEms="7"
                        android:singleLine="true"
                        android:text="正在降价" />


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"

        android:layout_height="fill_parent"
        android:background="@color/window_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:background="@color/white"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="10.0dip">

                <TextView

                    style="@style/item_price"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:ellipsize="end"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:text="￥" />

                <TextView
                    android:id="@+id/p_c_price"
                    style="@style/item_price_red"
                    android:layout_width="120dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:ellipsize="end"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:text="1128.60" />

                <TextView

                    style="@style/item_price"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:ellipsize="end"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:text="原价" />

                <TextView
                    android:id="@+id/p_price"
                    style="@style/item_price_blue"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:ellipsize="end"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:text="128.6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10.0dip">

                <TextView
                    android:id="@+id/product_detail_bar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bar_bg_left_selector"
                    android:gravity="center"
                    android:text="@string/label_product_detail"
                    android:textColor="@color/text_blue" />

                <TextView
                    android:id="@+id/join_user_bar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bar_bg_right_selector"
                    android:gravity="center"
                    android:text="@string/label_user"
                    android:textColor="@color/text_blue" />
            </LinearLayout>

            <ListView
                android:id="@+id/join_user_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="#00000000"
                android:dividerHeight="0.0dip"
                android:listSelector="#00000000"
                android:scrollbars="none"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/product_detail_container"
                android:layout_width="fill_parent"
                android:layout_height="500dp"
                android:cacheColorHint="#00000000"
                android:divider="#00000000"
                android:dividerHeight="0.0dip"
                android:listSelector="#00000000"
                android:orientation="vertical"
                android:scrollbars="none">

                <WebView
                    android:id="@+id/detail_view"
                    android:layout_width="match_parent"
                    android:layout_height="268dp"></WebView>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_marginBottom="@dimen/padding_10dip">
            <TextView android:enabled="true" android:id="@+id/btn_buy"
                android:layout_marginTop="@dimen/button_layout_top_margin"
                android:text="@string/label_buy_now"
                android:layout_below="@id/main_account_login_input_container"
                android:onClick="onClick"
                style="@style/ButtonStyle.Blue"
                />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>