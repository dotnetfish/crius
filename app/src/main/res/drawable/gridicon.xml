<?xml version="1.0" encoding="utf-8"?>
<selector   xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:layout_width="wrap_content"><shape android:shape="rectangle">
        <stroke android:width="1.0px" android:color="#f6f6f6f6" />

        <gradient android:angle="270.0" android:endColor="#ffe8ecef" android:startColor="#ffe8ecef" />
    </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
        <gradient android:angle="270.0" android:endColor="#ffe8ecef" android:startColor="#ffe8ecef" />

        <stroke android:width="1.0px" android:color="#f6f6f6f6" />
    </shape></item>
    <item><shape android:shape="rectangle">
        <gradient android:angle="270.0" android:endColor="#ffffffff" android:startColor="#ffffffff" />

        <stroke android:width="1.0px" android:color="#f6f6f6f6" />
    </shape></item>

</selector>