<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
       <!-- <item name="colorPrimary">@color/</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
    </style>
    <style name="NoActionbar" parent="@android:style/Theme.NoTitleBar" />
    <style name="MMThemeHolo" parent="@android:style/Theme.Holo.Light">
       <item name="android:windowBackground">@color/theme_window_color</item>
        <item name="android:dropDownListViewStyle">@style/Style.DropDownListView</item>
        <item name="android:editTextStyle">@style/MMEditText</item>
        <item name="android:listViewStyle">@style/MMListView</item>
        <item name="android:radioButtonStyle">@style/MMRadioButtonView</item>
        <item name="android:textViewStyle">@style/MMTextView</item>
        <item name="android:windowAnimationStyle">@style/MMAnimation.Activity.Holo</item>
        <item name="android:actionBarStyle">@style/Style.ActionBar.Solid</item>
        <item name="android:popupMenuStyle">@style/Style.PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Style.ActionBar.SubMenuTitleText</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_arrow_indicator</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_menu_background</item>
    </style>
    <style name="Style.DropDownListView" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:background">@color/action_dropdown_color</item>
        <item name="android:listSelector">@drawable/drop_down_listview_selector</item>
        <item name="android:divider">@color/action_dropdown_divider_color</item>
        <item name="android:dividerHeight">1.0px</item>
    </style>
    <style name="Style.PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/abc_menu_dropdown_panel_holo_dark</item>
    </style>
    <style name="Style.ActionBar.SubMenuTitleText" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/action_bar_text_color</item>
    </style>
    <style name="MMListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">0.0dip</item>
    </style>
    <style name="MMTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColorLink">@color/blue</item>
    </style>
    <style name="MMRadioButtonView" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:button">@null</item>
    </style>
    <style name="Style.ActionBar.Solid" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:icon">@color/transparent</item>
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:height">52.5dip</item>
        <item name="android:titleTextStyle">@style/MMActionBar.TitleTextStyle</item>
        <item name="android:indeterminateProgressStyle">@style/ActionBarCustomProgressBar</item>
        <item name="android:backgroundStacked">@color/action_bar_color</item>
        <item name="android:backgroundSplit">@color/action_bar_color</item>
    </style>
    <style name="ActionBarCustomProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_actionbar_holo</item>
    </style>
    <style name="MMActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/ActionBarTextSize</item>
        <item name="android:textColor">@color/action_bar_text_color</item>
    </style>
    <style name="MMEditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/edittext_full_bg_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MMBigButton">
        <item name="android:textSize">@dimen/ActionBarTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/LargePadding</item>
        <item name="android:paddingRight">@dimen/LargePadding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/NormalButtonHeight</item>
    </style>
    <style name="MMBigGreenButton" parent="@style/MMBigButton">
        <item name="android:textColor">@color/green_button_text_selector</item>
        <item name="android:background">@drawable/common_button_green</item>
    </style>
    <style name="MMBigRedButton" parent="@style/MMBigButton">
        <item name="android:background">@drawable/common_button_red</item>
    </style>
    <style name="MMBigGreyButton" parent="@style/MMBigButton">
        <item name="android:textColor">@color/theme_text_color</item>
        <item name="android:background">@drawable/common_button_white</item>
    </style>
    <style name="MMAnimation.Activity.Holo" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/pop_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_not_change</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_not_change</item>
        <item name="android:activityCloseExitAnimation">@anim/pop_out</item>
    </style>
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="theme_dialog_fullscreen">
        <item name="android:windowBackground">@color/haf_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_back</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_finish</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_new</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_back</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_finish</item>
    </style>
    <style name="Animations_PopUpMenu_BottomToTop">
        <item name="android:windowEnterAnimation">@anim/extension_appear_from_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/extension_disappear_from_top_to_bottom</item>
    </style>
    <style name="MenuDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="DialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/appear</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>
    <style name="MenuDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
    </style>
    <style name="badgeTextViewStyle" parent="@android:style/Widget.TextView">
    <item name="android:textSize">11.0sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/new_tips_bg</item>
    <item name="android:padding">0.0dip</item>
    <item name="android:layout_width">20.0dip</item>
    <item name="android:layout_height">20.0dip</item>
    <item name="android:singleLine">true</item>
</style>
    <style name="badgeTextViewSmallStyle"
           parent="@android:style/Widget.TextView">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/new_tips_bg</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_width">15.0dip</item>
        <item name="android:layout_height">15.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="item_sub_title"
        parent="@android:style/Widget.TextView">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">3sp</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TipsLargeStyle"
           parent="@android:style/Widget.TextView">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/new_tips_bg</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_width">25.0dip</item>
        <item name="android:layout_height">25.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="largeCustomProgressBar" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large_holo</item>
    </style>
    <style name="mediumCustomProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_holo</item>
    </style>
    <style name="smallCustomProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_holo</item>
    </style>
    <style name="Theme.AppStartLoad" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@drawable/app_main_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="ToastAnimation">
        <item name="android:windowEnterAnimation">@anim/toast_in</item>
        <item name="android:windowExitAnimation">@anim/toast_out</item>
    </style>

    <style name="ButtonStyle.Blue" parent="@style/ButtonBaseStyle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/long_btn_blue_bg_selector</item>
        <item name="android:shadowColor">#26000000</item>
        <item name="android:shadowDy">-2.0</item>
        <item name="android:shadowRadius">0.1</item>
    </style>
    <style name="ButtonBaseStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/font_size_3</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44.0dip</item>
        <item name="android:layout_marginLeft">@dimen/button_item_left_right_margin</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:layout_marginRight">@dimen/button_item_left_right_margin</item>
    </style>
    <style name="TitleBarShadowStyle">
        <item name="android:background">@drawable/title_bar_shadow</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3.0dip</item>
    </style>
    <style name="SettingItemTips">
        <item name="android:textSize">@dimen/setting_item_tips_text_size</item>
        <item name="android:textColor">@color/color_B</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/setting_item_tips_left_right_margin</item>
        <item name="android:layout_marginTop">@dimen/setting_item_tips_top_margin</item>
        <item name="android:layout_marginRight">@dimen/setting_item_tips_left_right_margin</item>
        <item name="android:layout_marginBottom">@dimen/setting_item_tips_bottom_margin</item>
        <item name="android:lineSpacingExtra">1.0dip</item>
    </style>
    <style name="PasswordEditTextStyle" parent="@style/editAccountInfoTextStyle">
        <item name="android:maxLength">16</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="editAccountInfoTextStyle">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_A</item>
        <item name="android:textColorHint">#333a404c</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor_background</item>
    </style>
</resources>
